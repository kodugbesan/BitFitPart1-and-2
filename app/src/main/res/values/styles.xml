<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BitFitPart1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#6200EE</item> <!-- Purple -->
        <item name="colorPrimaryDark">#3700B3</item> <!-- Dark Purple -->
        <item name="colorAccent">#03DAC5</item> <!-- Teal -->
        <item name="android:windowBackground">#FFFFFF</item> <!-- White Background -->
        <item name="android:textColor">#000000</item> <!-- Black Text -->
        <item name="android:buttonStyle">@style/MyButton</item> <!-- Custom Button Style -->
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White Text on Button -->
    </style>
</resources>
